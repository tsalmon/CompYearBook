<p id="notice"><%= notice %></p>
<div class="pure-g">
	<% @users.each do |user| %>
		<div class="pure-u-1-2 pure-u-sm-1-3 pure-u-md-1-4 pure-u-lg-1-4 pure-u-xl-1-5">
			<%= link_to image_tag("user.png", :alt => "#{user.surname} #{user.name}"), user_path(user.id) %>
			<div>
				<span><%= user.surname %></span>
				<span><%= user.name %></span>,
				<% if user.function %>
				<span><%= link_to user.function.name, function_path(user.function.id) %></span>
				<% end %>
			</div>
		</div>
	<% end %>
</div>
<br>

<%= link_to 'New User', new_user_path %>
