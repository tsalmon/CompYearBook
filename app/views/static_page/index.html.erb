<div class="pure-g">
<% @users.each do |user| %>
	<div class="pure-u-1-3">
		<%= link_to image_tag("user.png", :alt => "#{user.surname} #{user.name}"), user_path(user.id) %>
		<div>
			<span><%= user.surname %></span>
			<span><%= user.name %></span>,
			<span><%= user.function.name %></span>
		</div>
    </div>
<% end %>
</div>
